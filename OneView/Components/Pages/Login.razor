@page "/login"
@using OneView.Services
@using OneView.Models

<PageTitle>Login - OneView</PageTitle>

<div class="login-overlay">
    <!-- Background elements from dashboard for modal effect -->
    <div class="dashboard-bg"></div>

    <!-- Login Dialog -->
    <div class="login-dialog">
        <div class="dialog-glow"></div>
        
        <div class="dialog-header">
            <div class="header-icon">
                <div class="globe-orb-small">
                    <div class="orb-ring-small"></div>
                </div>
            </div>
            <div class="header-title">WALD DACTIMSTA LISTA</div>
        </div>

        <div class="dialog-content">
            @if (showError)
            {
                <div class="error-box">
                    <span>@errorMessage</span>
                </div>
            }

            <div class="input-container">
                <label for="username">USERNAME</label>
                <input id="username" type="text" @bind="username" disabled="@isLoading" />
            </div>

            <div class="input-container">
                <label for="password">PASSWORD</label>
                <input id="password" type="password" @bind="password" disabled="@isLoading" />
            </div>

            <button class="btn-login" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <div class="spinner-small"></div>
                }
                else
                {
                    <span>LOGIN</span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private bool showError = false;

    [Inject]
    private NavigationManager? Navigation { get; set; }

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            ShowErrorMessage("Username and password are required.");
            return;
        }

        isLoading = true;
        showError = false;
        StateHasChanged();

        try
        {
            await Task.Delay(400); // Simulate network latency

            bool success = App.LoginService.Login(username, password, "");

            if (success)
            {
                Navigation?.NavigateTo("/", forceLoad: true);
            }
            else
            {
                ShowErrorMessage("Authentication Failed. Check Credentials.");
            }
        }
        catch (Exception ex)
        {
            ShowErrorMessage($"System Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowErrorMessage(string message)
    {
        errorMessage = message;
        showError = true;
        StateHasChanged();
    }
}

