@page "/"
@using OneView.ViewModels
@using OneView.Components.Layout
@implements IDisposable

<PageTitle>OneView Dashboard</PageTitle>

@if (!_viewModel.IsLoggedIn)
{
    <div class="login-redirect">
        <div class="spinner"></div>
        <p>Redirecting to login...</p>
    </div>
}
else
{
    <div class="dashboard">
        <!-- Top Navigation Bar -->
        <div class="nav-bar">
            <div class="nav-spacer"></div>
            <button class="nav-btn menu-btn" @onclick="ToggleNavMenu">
                <span>☰</span>
            </button>
        </div>

        <!-- Widget Grid - 2 Columns x 4 Rows -->
        <div class="widget-container">
            
            <!-- ROW 1 -->
            <!-- Widget 1,1: Globe/World Data -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content">
                    <div class="globe-orb">
                        <div class="orb-ring ring-1"></div>
                        <div class="orb-ring ring-2"></div>
                        <div class="orb-core">
                            <div class="speed-display">
                                <div class="speed-value">@_viewModel.Speed.ToString("F0")</div>
                                <div class="speed-unit">km/h</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-label">SPEED DATA</div>
            </div>

            <!-- Widget 1,2: Clock / Ride Duration -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content">
                    <div class="duration-display">
                        <span class="duration-icon">⏱️</span>
                        <div class="duration-value">@_viewModel.TimeOnBike</div>
                        <div class="duration-label">TIME ON BIKE</div>
                    </div>
                </div>
                <div class="widget-label">@DateTime.Now.ToString("ddd, MMM dd - yyyy").ToUpper()</div>
            </div>

            <!-- ROW 2 -->
            <!-- Widget 2,1: Climate/Battery Status -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content climate-widget">
                    <div class="climate-icons">
                        <span class="climate-icon">☀️</span>
                        <span class="climate-icon bolt">⚡</span>
                        <span class="climate-icon">🔍</span>
                    </div>
                    <div class="climate-temp">@_viewModel.BatteryPercent.ToString("F0")% - BATTERY</div>
                </div>
                <div class="widget-label">POWER STATUS</div>
            </div>

            <!-- Widget 2,2: System Status -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content">
                    <div class="status-grid single">
                        <div class="status-icon @(_viewModel.IsHelmetConnected ? "active" : "")">📡</div>
                    </div>
                </div>
                <div class="widget-label">@(_viewModel.IsHelmetConnected ? "DEVICE CONNECTED" : "NO DEVICE")</div>
            </div>

            <!-- ROW 3 -->
            <!-- Widget 3,1: Power Flow (now Incline) -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content power-content">
                    <div class="incline-display">
                        <div class="incline-item">
                            <div class="incline-label">LEFT</div>
                            <div class="incline-value">@_viewModel.InclineLeft.ToString("F1")°</div>
                        </div>
                        <div class="incline-item">
                            <div class="incline-label">RIGHT</div>
                            <div class="incline-value">@_viewModel.InclineRight.ToString("F1")°</div>
                        </div>
                    </div>
                </div>
                <div class="widget-label">INCLINE ANGLES</div>
            </div>

            <!-- Widget 3,2: Ride Stats -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content stats-content">
                    <div class="stat-item">
                        <div class="stat-label">AVG</div>
                        <div class="stat-value">@_viewModel.MediumSpeed.ToString("F1")</div>
                        <div class="stat-unit">km/h</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-label">MAX</div>
                        <div class="stat-value">@_viewModel.MaxSpeed.ToString("F1")</div>
                        <div class="stat-unit">km/h</div>
                    </div>
                </div>
                <div class="widget-label">SPEED STATS</div>
            </div>

            <!-- ROW 4 -->
            <!-- Widget 4,1: Distance & Bluetooth -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content device-status-summary">
                    <div class="device-status-block">
                        <div class="distance-display">
                            <div class="distance-value">@_viewModel.Distance.ToString("F2")</div>
                            <div class="distance-unit">KM</div>
                        </div>
                    </div>
                    <div class="device-status-inline">
                        BT: <span class="@(_viewModel.IsBluetoothOn ? "txt-found" : "txt-not-found")">
                            @(_viewModel.IsBluetoothOn ? "ON" : "OFF")
                        </span> • 
                        Packets: @_viewModel.PacketsSent
                    </div>
                </div>
                <div class="widget-label">DISTANCE & BT</div>
            </div>

            <!-- Widget 4,2: Ride Control -->
            <div class="widget">
                <div class="widget-glow"></div>
                <div class="widget-content">
                    <button class="ride-control-btn @(_viewModel.IsRideActive ? "stop" : "start")" 
                            @onclick="_viewModel.ToggleRideCommand.Execute">
                        <span class="control-icon">@(_viewModel.IsRideActive ? "⏹️" : "▶️")</span>
                        <span class="control-text">@_viewModel.RideButtonText</span>
                    </button>
                </div>
                <div class="widget-label">RIDE CONTROL</div>
            </div>

        </div>
    </div>
}

@code {
    private MainViewModel _viewModel = new();

    [Inject]
    private NavigationManager? Navigation { get; set; }

    [CascadingParameter]
    public MainLayout? Layout { get; set; }

    private bool IsLoggedIn => App.LoginService?.IsLoggedIn() ?? false;

    protected override void OnInitialized()
    {
        // Check login and redirect if needed
        if (!IsLoggedIn)
        {
            Navigation?.NavigateTo("/login");
            return;
        }

        // Subscribe to property changes for UI updates
        // InvokeAsync ensures StateHasChanged runs on UI thread
        _viewModel.PropertyChanged += async (s, e) =>
        {
            await InvokeAsync(StateHasChanged);
        };
    }

    private void ToggleNavMenu()
    {
        Layout?.ToggleNavMenu();
    }

    public void Dispose()
    {
        _viewModel?.Dispose();
    }
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .dashboard {
        min-height: 100vh;
        background: #0a0e27;
        background-image: 
            radial-gradient(at 20% 30%, rgba(0, 212, 255, 0.15) 0px, transparent 50%),
            radial-gradient(at 80% 70%, rgba(0, 255, 136, 0.1) 0px, transparent 50%);
        padding: 16px;
        font-family: 'Segoe UI', -apple-system, sans-serif;
        position: relative;
    }

    .dashboard::before {
        content: '';
        position: fixed;
        top: -30%;
        right: -15%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(0, 212, 255, 0.12) 0%, transparent 70%);
        filter: blur(60px);
        animation: float-glow 18s ease-in-out infinite;
        pointer-events: none;
    }

    /* Top Navigation Bar */
    .nav-bar {
        display: flex;
        align-items: center;
        justify-content: flex-end; /* Changed */
        padding: 12px 8px;
        margin-bottom: 20px;
    }

    .nav-btn {
        width: 42px;
        height: 42px;
        background: rgba(0, 212, 255, 0.08);
        border: 1px solid rgba(0, 212, 255, 0.25);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 1.4rem;
        color: #00d4ff;
        transition: all 0.2s ease;
    }

    .nav-btn:active {
        background: rgba(0, 212, 255, 0.15);
        transform: scale(0.95);
    }

    .nav-spacer {
        flex: 1;
    }

    /* Widget Container - 2x4 Grid */
    .widget-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(4, auto);
        gap: 14px;
        max-width: 480px;
        margin: 0 auto;
    }

    .widget {
        position: relative;
        background: rgba(10, 20, 40, 0.5);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(0, 212, 255, 0.25);
        border-radius: 16px;
        padding: 18px;
        aspect-ratio: 1;
        overflow: hidden;
        transition: all 0.25s ease;
    }

    .widget:active {
        transform: scale(0.97);
        border-color: rgba(0, 212, 255, 0.5);
        box-shadow: 0 0 24px rgba(0, 212, 255, 0.3);
    }

    .widget-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(0, 212, 255, 0.08) 0%, transparent 70%);
        animation: rotate-glow 20s linear infinite;
        pointer-events: none;
    }

    .widget-content {
        position: relative;
        width: 100%;
        height: calc(100% - 30px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .widget-label {
        position: absolute;
        bottom: 12px;
        left: 16px;
        right: 16px;
        font-size: 0.65rem;
        color: rgba(0, 212, 255, 0.85);
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        text-align: center;
        z-index: 2;
    }

    /* Globe/Speed Widget */
    .globe-orb {
        position: relative;
        width: 120px;
        height: 120px;
    }

    .orb-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        border: 1.5px solid rgba(0, 212, 255, 0.35);
        border-radius: 50%;
        transform: translate(-50%, -50%);
    }

    .ring-1 {
        width: 120px;
        height: 120px;
        animation: orbit 10s linear infinite;
    }

    .ring-2 {
        width: 90px;
        height: 90px;
        animation: orbit 7s linear infinite reverse;
    }

    .orb-core {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 85px;
        height: 85px;
        transform: translate(-50%, -50%);
        background: radial-gradient(circle, rgba(0, 255, 136, 0.25) 0%, rgba(0, 212, 255, 0.08) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1.5px solid rgba(0, 212, 255, 0.5);
        box-shadow: 0 0 30px rgba(0, 212, 255, 0.4), inset 0 0 20px rgba(0, 255, 136, 0.2);
    }

    .speed-display {
        text-align: center;
    }

    .speed-value {
        font-size: 2.4rem;
        font-weight: 900;
        color: #00ff88;
        text-shadow: 0 0 16px rgba(0, 255, 136, 0.8);
        line-height: 1;
    }

    .speed-unit {
        font-size: 0.7rem;
        color: rgba(0, 212, 255, 0.9);
        margin-top: 2px;
    }

    /* Clock/Duration Widget */
    .clock-svg {
        width: 120px;
        height: 120px;
    }

    .clock-border {
        fill: none;
        stroke: rgba(0, 212, 255, 0.25);
        stroke-width: 1.5;
    }

    .clock-face {
        fill: rgba(0, 212, 255, 0.04);
        stroke: rgba(0, 212, 255, 0.4);
        stroke-width: 1;
    }

    .hour-hand {
        stroke: #00ff88;
        stroke-width: 3;
        stroke-linecap: round;
        filter: drop-shadow(0 0 6px rgba(0, 255, 136, 0.8));
    }

    .minute-hand {
        stroke: #00d4ff;
        stroke-width: 2;
        stroke-linecap: round;
        filter: drop-shadow(0 0 5px rgba(0, 212, 255, 0.7));
    }

    .clock-dot {
        fill: #00ff88;
        filter: drop-shadow(0 0 4px rgba(0, 255, 136, 1));
    }

    .duration-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .duration-icon {
        font-size: 2.5rem;
        filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.6));
    }

    .duration-value {
        font-size: 1.8rem;
        font-weight: 700;
        color: #00ff88;
        font-family: 'Courier New', monospace;
        text-shadow: 0 0 12px rgba(0, 255, 136, 0.7);
    }

    .duration-label {
        font-size: 0.55rem;
        color: rgba(0,212,255,0.65);
        letter-spacing: 1px;
        font-weight: 700;
        text-transform: uppercase;
        margin-top: 4px;
    }

    /* Climate Widget */
    .climate-widget {
        flex-direction: column;
    }

    .climate-icons {
        display: flex;
        gap: 12px;
        margin-bottom: 14px;
    }

    .climate-icon {
        font-size: 1.8rem;
        filter: drop-shadow(0 0 6px rgba(0, 212, 255, 0.6));
    }

    .climate-temp {
        font-size: 0.85rem;
        color: #00d4ff;
        font-weight: 700;
        letter-spacing: 0.8px;
        text-align: center;
    }

    /* Status Grid */
    .status-grid {
        display: grid;
        grid-template-columns: 1fr;
        place-items: center;
        width: 100%;
        height: 100%;
    }

    .status-icon {
        width: 48px;
        height: 48px;
        background: rgba(0, 212, 255, 0.08);
        border: 1px solid rgba(0, 212, 255, 0.25);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: all 0.3s;
    }

    .status-icon.active {
        background: rgba(0, 255, 136, 0.15);
        border-color: rgba(0, 255, 136, 0.5);
        box-shadow: 0 0 12px rgba(0, 255, 136, 0.4);
        animation: pulse-icon 2s ease-in-out infinite;
    }

    /* Incline Widget */
    .incline-display {
        display: flex;
        justify-content: space-around;
        width: 100%;
    }

    .incline-item {
        text-align: center;
    }

    .incline-label {
        font-size: 0.7rem;
        color: rgba(0, 212, 255, 0.7);
        text-transform: uppercase;
        margin-bottom: 8px;
    }

    .incline-value {
        font-size: 2rem;
        font-weight: 700;
        color: #00ff88;
        text-shadow: 0 0 12px rgba(0, 255, 136, 0.7);
    }

    /* Chart Widget */
    .chart-content {
        flex-direction: column;
        padding: 8px;
    }

    .chart-svg {
        width: 100%;
        height: 70px;
        margin-bottom: 8px;
    }

    .chart-line {
        fill: none;
        stroke: #00ff88;
        stroke-width: 2;
        filter: drop-shadow(0 0 5px rgba(0, 255, 136, 0.7));
    }

    .chart-fill {
        fill: rgba(0, 255, 136, 0.12);
        stroke: none;
    }

    .chart-label {
        font-size: 0.7rem;
        color: rgba(0, 212, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
    }

    /* Stats Content Widget */
    .stats-content {
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        padding: 0 10px;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
    }

    .stat-label {
        font-size: 0.6rem;
        color: rgba(0, 212, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        color: #00ff88;
        text-shadow: 0 0 12px rgba(0, 255, 136, 0.7);
        font-family: 'Courier New', monospace;
    }

    .stat-unit {
        font-size: 0.55rem;
        color: rgba(0, 212, 255, 0.6);
        text-transform: uppercase;
    }

    .stat-divider {
        width: 1px;
        height: 60%;
        background: linear-gradient(to bottom, transparent, rgba(0, 212, 255, 0.3), transparent);
    }

    /* Distance Display */
    .distance-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 8px 0;
    }

    .distance-value {
        font-size: 2rem;
        font-weight: 900;
        color: #00ff88;
        text-shadow: 0 0 16px rgba(0, 255, 136, 0.8);
        font-family: 'Courier New', monospace;
        line-height: 1;
    }

    .distance-unit {
        font-size: 0.7rem;
        color: rgba(0, 212, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-top: 4px;
    }

    /* Ride Control Button */
    .ride-control-btn {
        width: 100%;
        height: 80%;
        background: rgba(0, 212, 255, 0.1);
        border: 2px solid rgba(0, 212, 255, 0.3);
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .ride-control-btn.start {
        border-color: rgba(0, 255, 136, 0.5);
        background: rgba(0, 255, 136, 0.1);
    }

    .ride-control-btn.start:hover {
        border-color: rgba(0, 255, 136, 0.8);
        background: rgba(0, 255, 136, 0.2);
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
    }

    .ride-control-btn.stop {
        border-color: rgba(255, 68, 68, 0.5);
        background: rgba(255, 68, 68, 0.1);
    }

    .ride-control-btn.stop:hover {
        border-color: rgba(255, 68, 68, 0.8);
        background: rgba(255, 68, 68, 0.2);
        box-shadow: 0 0 20px rgba(255, 68, 68, 0.4);
    }

    .control-icon {
        font-size: 2rem;
        filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.6));
    }

    .control-text {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.9);
    }
    
    /* Login Redirect */
    .login-redirect {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: #0a0e27;
        color: #00d4ff;
        gap: 30px;
    }

    .spinner {
        width: 60px;
        height: 60px;
        border: 3px solid rgba(0, 212, 255, 0.2);
        border-top-color: #00ff88;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 400px) {
        .widget-container {
            gap: 12px;
        }
        .widget {
            padding: 14px;
        }
    }
</style>

<svg style="position: absolute; width: 0; height: 0;">
    <defs>
        <linearGradient id="powerGrad" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#00ff88;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#00d4ff;stop-opacity:1" />
        </linearGradient>
    </defs>
</svg>
