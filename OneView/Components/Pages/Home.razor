@page "/"
@using OneView.Services
@using OneView.Models
@implements IDisposable

<PageTitle>OneView Dashboard</PageTitle>

@if (!isLoggedIn)
{
    <div class="login-redirect">
        <div class="spinner"></div>
        <p>Redirecting to login...</p>
    </div>
}
else
{
    <div class="dashboard">
        <!-- Header -->
        <div class="header">
            <div class="header-content">
                <h1 class="title">
                    <span class="icon">⚡</span>
                    ONEVIEW
                    <span class="pulse-dot"></span>
                </h1>
                <div class="subtitle">Real-time Bike Monitoring System</div>
            </div>
            <div class="time-display">@DateTime.Now.ToString("HH:mm:ss")</div>
        </div>

        <!-- Primary Metrics - Hero Cards -->
        <div class="hero-metrics">
            <!-- Speed Widget -->
            <div class="hero-card speed-card">
                <div class="card-glow"></div>
                <div class="card-header">
                    <span class="card-icon">🚀</span>
                    <span class="card-label">CURRENT SPEED</span>
                </div>
                <div class="metric-display">
                    <div class="metric-value">@sensorData?.SpeedKmh.ToString("F1")</div>
                    <div class="metric-unit">km/h</div>
                </div>
                <div class="metric-bar">
                    <div class="bar-fill" style="width: @(Math.Min(sensorData?.SpeedKmh ?? 0, 50) * 2)%"></div>
                </div>
            </div>

            <!-- Battery Widget -->
            <div class="hero-card battery-card @GetBatteryClass()">
                <div class="card-glow"></div>
                <div class="card-header">
                    <span class="card-icon">🔋</span>
                    <span class="card-label">BATTERY LEVEL</span>
                </div>
                <div class="metric-display">
                    <div class="metric-value">@sensorData?.BatteryPercent.ToString("F0")</div>
                    <div class="metric-unit">%</div>
                </div>
                <div class="battery-indicator">
                    <div class="battery-fill" style="width: @(sensorData?.BatteryPercent ?? 0)%"></div>
                </div>
            </div>
        </div>

        <!-- Incline Angles - Dual Display -->
        <div class="incline-section">
            <h2 class="section-title">
                <span class="title-icon">📐</span>
                INCLINE ANGLES
            </h2>
            <div class="incline-cards">
                <!-- Left Incline -->
                <div class="incline-card left-incline">
                    <div class="incline-header">
                        <span class="incline-icon">↙️</span>
                        <span class="incline-label">LEFT</span>
                    </div>
                    <div class="angle-display">
                        <div class="angle-arc">
                            <svg viewBox="0 0 100 100" class="angle-svg">
                                <circle cx="50" cy="50" r="40" class="arc-bg"/>
                                <circle cx="50" cy="50" r="40" class="arc-fill" 
                                        style="stroke-dashoffset: @(251 - (Math.Abs(sensorData?.InclineAngleDegLeft ?? 0) / 45 * 251))"/>
                            </svg>
                            <div class="angle-value">
                                @sensorData?.InclineAngleDegLeft.ToString("F1")<span class="degree">°</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Incline -->
                <div class="incline-card right-incline">
                    <div class="incline-header">
                        <span class="incline-icon">↘️</span>
                        <span class="incline-label">RIGHT</span>
                    </div>
                    <div class="angle-display">
                        <div class="angle-arc">
                            <svg viewBox="0 0 100 100" class="angle-svg">
                                <circle cx="50" cy="50" r="40" class="arc-bg"/>
                                <circle cx="50" cy="50" r="40" class="arc-fill" 
                                        style="stroke-dashoffset: @(251 - (Math.Abs(sensorData?.InclineAngleDegRight ?? 0) / 45 * 251))"/>
                            </svg>
                            <div class="angle-value">
                                @sensorData?.InclineAngleDegRight.ToString("F1")<span class="degree">°</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Grid -->
        <div class="status-grid">
            <!-- Bluetooth Status -->
            <div class="status-card">
                <div class="status-icon @(isBluetoothOn ? "status-active" : "status-inactive")">
                    📡
                </div>
                <div class="status-info">
                    <div class="status-label">Bluetooth</div>
                    <div class="status-value @(isBluetoothOn ? "text-success" : "text-error")">
                        @(isBluetoothOn ? "ACTIVE" : "INACTIVE")
                    </div>
                </div>
            </div>

            <!-- Helmet Connection -->
            <div class="status-card">
                <div class="status-icon @(isHelmetConnected ? "status-active" : "status-inactive")">
                    🪖
                </div>
                <div class="status-info">
                    <div class="status-label">Helmet</div>
                    <div class="status-value @(isHelmetConnected ? "text-success" : "text-error")">
                        @(isHelmetConnected ? "CONNECTED" : "DISCONNECTED")
                    </div>
                </div>
            </div>

            <!-- Data Packets -->
            <div class="status-card">
                <div class="status-icon status-active">
                    📤
                </div>
                <div class="status-info">
                    <div class="status-label">Packets Sent</div>
                    <div class="status-value text-info">@dataSentCount</div>
                </div>
            </div>

            <!-- Devices Found -->
            <div class="status-card">
                <div class="status-icon status-active">
                    🔍
                </div>
                <div class="status-info">
                    <div class="status-label">Devices Found</div>
                    <div class="status-value text-info">@devicesFound</div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(lastError))
        {
            <div class="error-banner">
                <span class="error-icon">⚠️</span>
                <span class="error-message">@lastError</span>
            </div>
        }
    </div>
}

@code {
    private Sensordata? sensorData;
    private bool isBluetoothOn;
    private bool isHelmetConnected;
    private int dataSentCount;
    private int devicesFound;
    private DateTime? lastDataSentTime;
    private string lastError = "";
    private string characteristicInfo = "";
    private System.Timers.Timer? refreshTimer;
    private bool isLoggedIn = false;

    [Inject]
    private NavigationManager? Navigation { get; set; }

    protected override void OnInitialized()
    {
        isLoggedIn = App.LoginService?.IsLoggedIn() ?? false;

        if (!isLoggedIn)
        {
            Navigation?.NavigateTo("/login");
            return;
        }

        refreshTimer = new System.Timers.Timer(100);
        refreshTimer.Elapsed += async (sender, e) => await RefreshData();
        refreshTimer.AutoReset = true;
        refreshTimer.Start();
    }

    private async Task RefreshData()
    {
        await InvokeAsync(() =>
        {
            sensorData = App.SensorService.CurrentSensorData;
            isBluetoothOn = App.BluetoothService.IsBluetoothAvailable();
            isHelmetConnected = App.BluetoothService.IsHelmetConnected();
            dataSentCount = App.BluetoothService.DataSentCount;
            devicesFound = App.BluetoothService.DevicesFoundDuringScan;
            lastDataSentTime = App.BluetoothService.LastDataSentTime;
            lastError = App.BluetoothService.LastError;
            characteristicInfo = App.BluetoothService.CharacteristicInfo;
            StateHasChanged();
        });
    }

    private string GetBatteryClass()
    {
        if (sensorData == null) return "";
        if (sensorData.BatteryPercent > 50) return "battery-high";
        if (sensorData.BatteryPercent > 20) return "battery-medium";
        return "battery-low";
    }

    public void Dispose()
    {
        refreshTimer?.Stop();
        refreshTimer?.Dispose();
    }
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .dashboard {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
        padding: 20px;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    /* Header */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 30px;
    }

    .title {
        font-size: 2.5rem;
        font-weight: 900;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 15px;
        letter-spacing: 3px;
        position: relative;
    }

    .title .icon {
        font-size: 2rem;
        animation: rotate 3s linear infinite;
    }

    .pulse-dot {
        width: 12px;
        height: 12px;
        background: #00ff88;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
        box-shadow: 0 0 20px #00ff88;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-top: 5px;
    }

    .time-display {
        font-size: 2rem;
        color: #00ff88;
        font-weight: 300;
        font-family: 'Courier New', monospace;
    }

    /* Hero Metrics */
    .hero-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 30px;
    }

    .hero-card {
        position: relative;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        padding: 35px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .hero-card:hover {
        transform: translateY(-5px);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .card-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(0, 255, 136, 0.1) 0%, transparent 70%);
        animation: glow-rotate 8s linear infinite;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .card-icon {
        font-size: 2rem;
    }

    .card-label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
    }

    .metric-display {
        display: flex;
        align-items: baseline;
        gap: 10px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .metric-value {
        font-size: 4rem;
        font-weight: 700;
        color: #fff;
        line-height: 1;
        text-shadow: 0 0 30px rgba(0, 255, 136, 0.5);
    }

    .metric-unit {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.4);
        font-weight: 300;
    }

    .metric-bar {
        height: 8px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #00ff88, #00d4ff);
        border-radius: 10px;
        transition: width 0.3s ease;
        box-shadow: 0 0 15px rgba(0, 255, 136, 0.6);
    }

    .battery-indicator {
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        z-index: 1;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .battery-fill {
        height: 100%;
        background: linear-gradient(90deg, #00ff88, #7fff00);
        border-radius: 8px;
        transition: width 0.3s ease, background 0.3s ease;
    }

    .battery-high .battery-fill {
        background: linear-gradient(90deg, #00ff88, #7fff00);
        box-shadow: 0 0 15px rgba(0, 255, 136, 0.6);
    }

    .battery-medium .battery-fill {
        background: linear-gradient(90deg, #ffd700, #ffa500);
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
    }

    .battery-low .battery-fill {
        background: linear-gradient(90deg, #ff4444, #cc0000);
        box-shadow: 0 0 15px rgba(255, 68, 68, 0.8);
        animation: pulse-battery 1s ease-in-out infinite;
    }

    /* Incline Section */
    .incline-section {
        margin-bottom: 30px;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.5rem;
        color: #fff;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .title-icon {
        font-size: 1.8rem;
    }

    .incline-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .incline-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .incline-card:hover {
        transform: translateY(-5px);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .incline-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
    }

    .incline-icon {
        font-size: 2rem;
    }

    .incline-label {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
    }

    .angle-display {
        display: flex;
        justify-content: center;
    }

    .angle-arc {
        position: relative;
        width: 180px;
        height: 180px;
    }

    .angle-svg {
        width: 100%;
        height: 100%;
        transform: rotate(-90deg);
    }

    .arc-bg {
        fill: none;
        stroke: rgba(255, 255, 255, 0.1);
        stroke-width: 8;
    }

    .arc-fill {
        fill: none;
        stroke: url(#gradient);
        stroke-width: 8;
        stroke-linecap: round;
        stroke-dasharray: 251;
        transition: stroke-dashoffset 0.3s ease;
        filter: drop-shadow(0 0 10px rgba(0, 255, 136, 0.6));
    }

    .angle-value {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
    }

    .degree {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.5);
    }

    /* Status Grid */
    .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .status-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 25px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

    .status-card:hover {
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .status-icon {
        font-size: 2.5rem;
        filter: grayscale(100%);
        opacity: 0.3;
        transition: all 0.3s ease;
    }

    .status-icon.status-active {
        filter: grayscale(0%);
        opacity: 1;
    }

    .status-info {
        flex: 1;
    }

    .status-label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
    }

    .status-value {
        font-size: 1.2rem;
        font-weight: 700;
        font-family: 'Courier New', monospace;
    }

    .text-success {
        color: #00ff88;
        text-shadow: 0 0 10px rgba(0, 255, 136, 0.5);
    }

    .text-error {
        color: #ff4444;
        text-shadow: 0 0 10px rgba(255, 68, 68, 0.5);
    }

    .text-info {
        color: #00d4ff;
        text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
    }

    /* Error Banner */
    .error-banner {
        background: rgba(255, 68, 68, 0.1);
        border: 2px solid rgba(255, 68, 68, 0.3);
        border-radius: 15px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        backdrop-filter: blur(10px);
    }

    .error-icon {
        font-size: 2rem;
    }

    .error-message {
        color: #ff4444;
        font-size: 1rem;
        font-weight: 500;
    }

    /* Login Redirect */
    .login-redirect {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
        color: #fff;
        gap: 30px;
    }

    .spinner {
        width: 60px;
        height: 60px;
        border: 4px solid rgba(255, 255, 255, 0.1);
        border-top-color: #00ff88;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    /* Animations */
    @@keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(1.1); }
    }

    @@keyframes pulse-battery {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @@keyframes glow-rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .header {
            flex-direction: column;
            gap: 20px;
        }

        .title {
            font-size: 2rem;
        }

        .time-display {
            font-size: 1.5rem;
        }

        .metric-value {
            font-size: 3rem;
        }

        .hero-metrics,
        .incline-cards,
        .status-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
