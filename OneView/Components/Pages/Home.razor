@page "/"
@using OneView.Services
@using OneView.Models
@implements IDisposable

<PageTitle>Live Sensor Dashboard</PageTitle>

<div class="dashboard-container">
    <div class="header">
        <h1>🚴 OneView Live Dashboard</h1>
 <p class="update-time">Letzte Aktualisierung: @DateTime.Now.ToString("HH:mm:ss.fff")</p>
    </div>

    <!-- Sensor Data Cards -->
  <div class="sensor-grid">
        <div class="card speed-card">
            <div class="card-icon">🚴</div>
        <div class="card-label">Geschwindigkeit</div>
       <div class="card-value">@sensorData?.SpeedKmh.ToString("F1")</div>
        <div class="card-unit">km/h</div>
     </div>

  <div class="card battery-card">
    <div class="card-icon">🔋</div>
   <div class="card-label">Batterie</div>
     <div class="card-value @GetBatteryClass()">@sensorData?.BatteryPercent.ToString("F0")</div>
 <div class="card-unit">%</div>
   </div>

 <div class="card tilt-card">
      <div class="card-icon">↙️</div>
     <div class="card-label">Neigung Links</div>
     <div class="card-value">@sensorData?.InclineAngleDegLeft.ToString("F1")</div>
      <div class="card-unit">Grad</div>
     </div>

     <div class="card tilt-card">
       <div class="card-icon">↘️</div>
     <div class="card-label">Neigung Rechts</div>
    <div class="card-value">@sensorData?.InclineAngleDegRight.ToString("F1")</div>
  <div class="card-unit">Grad</div>
        </div>
 </div>

    <!-- Bluetooth Status -->
    <div class="status-panel">
        <h2>📡 Bluetooth Status</h2>
        <table class="status-table">
        <tr>
   <td class="label">Bluetooth:</td>
     <td class="value @(isBluetoothOn ? "success" : "error")">
  @(isBluetoothOn ? "✅ EIN" : "❌ AUS")
             </td>
   </tr>
   <tr>
<td class="label">Helm Verbindung:</td>
    <td class="value @(isHelmetConnected ? "success" : "error")">
     @(isHelmetConnected ? "✅ VERBUNDEN" : "❌ GETRENNT")
        </td>
         </tr>
   <tr>
      <td class="label">Gefundene Geräte:</td>
   <td class="value">@devicesFound</td>
    </tr>
  <tr>
    <td class="label">Gesendete Pakete:</td>
       <td class="value">@dataSentCount</td>
      </tr>
       <tr>
       <td class="label">Letzte Übertragung:</td>
 <td class="value">@(lastDataSentTime?.ToString("HH:mm:ss.fff") ?? "Nie")</td>
         </tr>
            <tr>
    <td class="label">Daten Aktualisiert:</td>
            <td class="value">@sensorData?.TimeUtc.ToLocalTime().ToString("HH:mm:ss")</td>
       </tr>
       @if (!string.IsNullOrEmpty(characteristicInfo))
  {
  <tr>
      <td class="label">Characteristic:</td>
     <td class="value" style="font-size: 0.8rem; word-break: break-all;">@characteristicInfo</td>
       </tr>
  }
    @if (!string.IsNullOrEmpty(lastError))
    {
     <tr class="error-row">
         <td class="label">Letzter Fehler:</td>
 <td class="value error">@lastError</td>
        </tr>
      }
        </table>
    </div>

    <!-- Raw Data for Debugging -->
    <div class="debug-panel">
  <h2>🔍 Rohdaten (Debug)</h2>
  <pre class="debug-output">╔═══════════════════════════════════════════════════════════════╗
║ SENSORDATEN   ║
╠═══════════════════════════════════════════════════════════════╣
║ Geschwindigkeit: @(sensorData?.SpeedKmh.ToString("F2") ?? "N/A")@(" km/h".PadRight(42))║
║ Neigung Links:   @(sensorData?.InclineAngleDegLeft.ToString("F2") ?? "N/A")@("°".PadRight(45))║
║ Neigung Rechts:  @(sensorData?.InclineAngleDegRight.ToString("F2") ?? "N/A")@("°".PadRight(45))║
║ Batterie:     @(sensorData?.BatteryPercent.ToString("F2") ?? "N/A")@("%".PadRight(45))║
║ Zeitstempel:     @(sensorData?.TimeUtc.ToString("HH:mm:ss.fff") ?? "N/A")@("".PadRight(36))║
╠═══════════════════════════════════════════════════════════════╣
║ BLUETOOTH STATUS ║
╠═══════════════════════════════════════════════════════════════╣
║ BT Verfügbar:  @(isBluetoothOn ? "JA" : "NEIN")@("".PadRight(45))║
║ Helm:       @(isHelmetConnected ? "VERBUNDEN" : "GETRENNT")@("".PadRight(40))║
║ Geräte gefunden: @devicesFound.ToString()@("".PadRight(44))║
║ Gesendete Pakete: @dataSentCount.ToString()@("".PadRight(43))║
║ Letzte Sendung:  @(lastDataSentTime?.ToString("HH:mm:ss.fff") ?? "Nie")@("".PadRight(36))║
╚═══════════════════════════════════════════════════════════════╝</pre>
    </div>
</div>

@code {
    private Sensordata? sensorData;
   private bool isBluetoothOn;
    private bool isHelmetConnected;
    private int dataSentCount;
private int devicesFound;
    private DateTime? lastDataSentTime;
  private string lastError = "";
  private string characteristicInfo = "";
    private System.Timers.Timer? refreshTimer;

    protected override void OnInitialized()
    {
        refreshTimer = new System.Timers.Timer(100);
    refreshTimer.Elapsed += async (sender, e) => await RefreshData();
      refreshTimer.AutoReset = true;
        refreshTimer.Start();
    }

    private async Task RefreshData()
   {
     await InvokeAsync(() =>
        {
 sensorData = App.SensorService.CurrentSensorData;
isBluetoothOn = App.BluetoothService.IsBluetoothAvailable();
    isHelmetConnected = App.BluetoothService.IsHelmetConnected();
  dataSentCount = App.BluetoothService.DataSentCount;
   devicesFound = App.BluetoothService.DevicesFoundDuringScan;
   lastDataSentTime = App.BluetoothService.LastDataSentTime;
   lastError = App.BluetoothService.LastError;
 characteristicInfo = App.BluetoothService.CharacteristicInfo;
   StateHasChanged();
        });
    }

    private string GetBatteryClass()
    {
        if (sensorData == null) return "";
        if (sensorData.BatteryPercent > 50) return "battery-good";
        if (sensorData.BatteryPercent > 20) return "battery-warning";
    return "battery-critical";
    }

    public void Dispose()
    {
  refreshTimer?.Stop();
        refreshTimer?.Dispose();
    }
}

<style>
    * {
      margin: 0;
  padding: 0;
        box-sizing: border-box;
 }

    .dashboard-container {
        padding: 20px;
 max-width: 1400px;
        margin: 0 auto;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
  padding-top: 60px;
    }

    .header {
        text-align: center;
  color: white;
      margin-bottom: 30px;
        padding: 20px;
  background: rgba(0,0,0,0.2);
    border-radius: 15px;
    }

    .header h1 {
        font-size: 2.5rem;
margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .update-time {
  font-size: 0.9rem;
  opacity: 0.9;
    }

    .sensor-grid {
        display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
  margin-bottom: 30px;
    }

    .card {
  background: white;
  border-radius: 20px;
    padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
   transform: translateY(-10px);
     box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }

    .card-icon {
   font-size: 3rem;
        margin-bottom: 15px;
    }

    .card-label {
  font-size: 0.9rem;
  color: #666;
   text-transform: uppercase;
letter-spacing: 1px;
        margin-bottom: 10px;
    }

    .card-value {
      font-size: 3rem;
  font-weight: bold;
        color: #333;
        margin-bottom: 5px;
  }

 .card-unit {
        font-size: 1rem;
        color: #999;
    }

    .battery-good {
        color: #4CAF50 !important;
    }

    .battery-warning {
      color: #FF9800 !important;
    }

    .battery-critical {
        color: #F44336 !important;
  animation: pulse 1s infinite;
    }

    @@keyframes pulse {
    0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
    }

    .status-panel, .debug-panel {
        background: white;
      border-radius: 20px;
  padding: 30px;
      margin-bottom: 20px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .status-panel h2, .debug-panel h2 {
  color: #333;
      margin-bottom: 20px;
        font-size: 1.5rem;
    }

    .status-table {
        width: 100%;
        border-collapse: collapse;
    }

    .status-table tr {
  border-bottom: 1px solid #eee;
    }

    .status-table tr:last-child {
  border-bottom: none;
    }

    .status-table td {
        padding: 15px 10px;
    }

    .status-table .label {
      font-weight: bold;
        color: #666;
  width: 40%;
    }

    .status-table .value {
  font-family: 'Courier New', monospace;
        color: #333;
        font-size: 1.1rem;
    }

.status-table .success {
        color: #4CAF50;
  font-weight: bold;
    }

 .status-table .error {
  color: #F44336;
  font-weight: bold;
    }

    .error-row {
        background: #ffebee;
    }

    .debug-output {
background: #000;
        color: #0f0;
        padding: 20px;
  border-radius: 10px;
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
  overflow-x: auto;
    line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .sensor-grid {
      grid-template-columns: 1fr;
     }

        .header h1 {
            font-size: 1.8rem;
    }

      .card-value {
      font-size: 2.5rem;
 }

        .dashboard-container {
      padding-top: 40px;
        }
    }
</style>
