@using OneView.Services

<div class="nav-menu-container @(isMenuOpen ? "open" : "")" @onclick="CloseMenuOnBackdrop">
    <div class="nav-menu-backdrop"></div>
    <div class="nav-menu-dialog" @onclick:stopPropagation="true">
        <div class="dialog-glow"></div>

        <div class="dialog-header">
            <div class="user-info">
                <div class="user-icon">👤</div>
                <div class="user-name">UserAccount</div>
            </div>
            <button class="menu-toggle-btn" @onclick="ToggleMenu">
                <span>✕</span>
            </button>
        </div>

        <nav class="nav-links">
            <NavLink class="nav-link-item" href="" Match="NavLinkMatch.All" @onclick="CloseMenu">
                <span class="link-icon">🏠</span>
                <span class="link-label">Home</span>
                <span class="link-arrow">→</span>
            </NavLink>

            <NavLink class="nav-link-item" href="rides" @onclick="CloseMenu">
                <span class="link-icon">🏁</span>
                <span class="link-label">Rides</span>
                <span class="link-arrow">→</span>
            </NavLink>

            @if (App.LoginService?.IsLoggedIn() == true)
            {
                <a class="nav-link-item logout-item" @onclick="HandleLogout">
                    <span class="link-icon">🚪</span>
                    <span class="link-label">Logout</span>
                    <span class="link-arrow">→</span>
                </a>
            }
            else
            {
                <NavLink class="nav-link-item" href="login" @onclick="CloseMenu">
                    <span class="link-icon">🔐</span>
                    <span class="link-label">Login</span>
                    <span class="link-arrow">→</span>
                </NavLink>
            }
        </nav>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager? Navigation { get; set; }

    public bool isMenuOpen = false;

    public void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
        StateHasChanged();
    }

    public void CloseMenu()
    {
        if (isMenuOpen)
        {
            isMenuOpen = false;
            StateHasChanged();
        }
    }

    private void CloseMenuOnBackdrop(MouseEventArgs e)
    {
        // Close menu when clicking backdrop (outside the dialog)
        CloseMenu();
    }

    private void HandleLogout()
    {
        App.LoginService?.Logout();
        CloseMenu();
        Navigation?.NavigateTo("/login", forceLoad: true);
    }
}

<style>
    .nav-menu-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2000;
        pointer-events: none;
        transition: opacity 0.3s ease;
        opacity: 0;
    }

    .nav-menu-container.open {
        pointer-events: all;
        opacity: 1;
    }

    .nav-menu-backdrop {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .nav-menu-container.open .nav-menu-backdrop {
        opacity: 1;
    }

    .nav-menu-dialog {
        position: absolute;
        top: 0;
        right: 0;
        width: 280px;
        height: 100%;
        background: rgba(10, 20, 40, 0.95);
        backdrop-filter: blur(20px);
        border-left: 1px solid rgba(0, 212, 255, 0.25);
        padding: 24px;
        box-shadow: -10px 0 40px rgba(0, 0, 0, 0.5);
        transform: translateX(100%);
        transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .nav-menu-container.open .nav-menu-dialog {
        transform: translateX(0);
    }

    .dialog-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(0, 212, 255, 0.08) 0%, transparent 70%);
        animation: rotate-glow 25s linear infinite;
        pointer-events: none;
    }

    .dialog-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .user-icon {
        width: 40px;
        height: 40px;
        background: rgba(0, 212, 255, 0.1);
        border: 1px solid rgba(0, 212, 255, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }

    .user-name {
        font-size: 1rem;
        color: #fff;
        font-weight: 600;
    }

    .menu-toggle-btn {
        width: 42px;
        height: 42px;
        background: rgba(0, 212, 255, 0.08);
        border: 1px solid rgba(0, 212, 255, 0.25);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 1.4rem;
        color: #00d4ff;
        transition: all 0.2s ease;
    }

    .menu-toggle-btn:hover {
        background: rgba(0, 212, 255, 0.15);
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .nav-link-item {
        display: flex;
        align-items: center;
        padding: 14px 16px;
        background: rgba(0, 212, 255, 0.05);
        border: 1px solid rgba(0, 212, 255, 0.2);
        border-radius: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .nav-link-item:hover {
        background: rgba(0, 212, 255, 0.1);
        border-color: rgba(0, 212, 255, 0.4);
        color: #fff;
    }

    .nav-link-item.active {
        background: rgba(0, 255, 136, 0.15);
        border-color: rgba(0, 255, 136, 0.5);
        color: #00ff88;
        box-shadow: 0 0 15px rgba(0, 255, 136, 0.2);
    }

    .logout-item:hover {
        background: rgba(255, 68, 68, 0.1);
        border-color: rgba(255, 68, 68, 0.4);
        color: #ff4444;
    }

    .link-icon {
        font-size: 1.2rem;
        width: 30px;
    }

    .link-label {
        flex: 1;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .link-arrow {
        font-size: 1rem;
    }

    @@keyframes rotate-glow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>
