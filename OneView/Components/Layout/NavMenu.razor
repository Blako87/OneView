@using OneView.Services

<div class="nav-container">
    <div class="nav-header">
        <div class="brand">
            <span class="brand-icon">⚡</span>
            <span class="brand-name">ONEVIEW</span>
        </div>
    </div>

    <nav class="nav-menu">
        <NavLink class="nav-item" href="" Match="NavLinkMatch.All">
            <span class="nav-icon">🎯</span>
            <span class="nav-label">Dashboard</span>
            <div class="nav-glow"></div>
        </NavLink>

        <NavLink class="nav-item" href="rides">
            <span class="nav-icon">🏁</span>
            <span class="nav-label">Rides</span>
            <div class="nav-glow"></div>
        </NavLink>

        @if (App.LoginService?.IsLoggedIn() == true)
        {
            <a class="nav-item logout" @onclick="Logout">
                <span class="nav-icon">🚪</span>
                <span class="nav-label">Logout</span>
                <div class="nav-glow"></div>
            </a>
        }
        else
        {
            <NavLink class="nav-item" href="login">
                <span class="nav-icon">🔐</span>
                <span class="nav-label">Login</span>
                <div class="nav-glow"></div>
            </NavLink>
        }
    </nav>

    <div class="nav-footer">
        <div class="connection-status @(isConnected ? "connected" : "disconnected")">
            <div class="status-dot"></div>
            <span>@(isConnected ? "CONNECTED" : "DISCONNECTED")</span>
        </div>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager? Navigation { get; set; }

    private bool isConnected = false;
    private System.Timers.Timer? statusTimer;

    protected override void OnInitialized()
    {
        UpdateConnectionStatus();
        statusTimer = new System.Timers.Timer(1000);
        statusTimer.Elapsed += async (sender, e) => await UpdateStatus();
        statusTimer.Start();
    }

    private async Task UpdateStatus()
    {
        await InvokeAsync(() =>
        {
            UpdateConnectionStatus();
            StateHasChanged();
        });
    }

    private void UpdateConnectionStatus()
    {
        isConnected = App.BluetoothService?.IsHelmetConnected() ?? false;
    }

    private void Logout()
    {
        App.LoginService?.Logout();
        Navigation?.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        statusTimer?.Stop();
        statusTimer?.Dispose();
    }
}

<style>
    .nav-container {
        height: 100%;
        display: flex;
        flex-direction: column;
        background: linear-gradient(135deg, #0f0c29 0%, #302b63 100%);
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-header {
        margin-bottom: 40px;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .brand-icon {
        font-size: 2rem;
        animation: rotate-slow 8s linear infinite;
    }

    .brand-name {
        font-size: 1.3rem;
        font-weight: 900;
        color: #fff;
        letter-spacing: 3px;
    }

    .nav-menu {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .nav-item {
        position: relative;
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 18px 20px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .nav-item:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(0, 255, 136, 0.3);
        color: #fff;
        transform: translateX(5px);
    }

    .nav-item.active {
        background: rgba(0, 255, 136, 0.1);
        border-color: rgba(0, 255, 136, 0.5);
        color: #00ff88;
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.2);
    }

    .nav-item.logout:hover {
        border-color: rgba(255, 68, 68, 0.5);
        color: #ff4444;
    }

    .nav-icon {
        font-size: 1.5rem;
        min-width: 30px;
        text-align: center;
    }

    .nav-label {
        font-size: 0.95rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .nav-glow {
        position: absolute;
        top: 50%;
        left: 0;
        width: 4px;
        height: 0;
        background: linear-gradient(180deg, #00ff88, #00d4ff);
        border-radius: 0 4px 4px 0;
        transform: translateY(-50%);
        transition: height 0.3s ease;
    }

    .nav-item.active .nav-glow {
        height: 60%;
    }

    .nav-footer {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .connection-status {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 15px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
    }

    .connection-status.connected {
        color: #00ff88;
        border-color: rgba(0, 255, 136, 0.3);
    }

    .connection-status.connected .status-dot {
        background: #00ff88;
        box-shadow: 0 0 10px rgba(0, 255, 136, 0.6);
        animation: pulse-dot 2s ease-in-out infinite;
    }

    .connection-status.disconnected {
        color: rgba(255, 255, 255, 0.4);
    }

    @@keyframes rotate-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @@keyframes pulse-dot {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.3);
            opacity: 0.7;
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .nav-container {
            padding: 15px;
        }

        .brand-name {
            font-size: 1.1rem;
        }

        .nav-label {
            font-size: 0.85rem;
        }
    }
</style>
